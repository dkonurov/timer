<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/linear_width_small"
    android:layout_height="@dimen/linear_height_small"
    android:orientation="horizontal"
    android:background="@drawable/edit_text_background"
    android:gravity="center_vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <EditText
            android:id="@+id/hour_list"
            android:textColor="@android:color/black"
            android:layout_width="@dimen/width_edit_text_small"
            android:layout_height="@dimen/width_edit_text_small"
            android:layout_marginLeft="@dimen/edit_text_left_padding_small"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="@dimen/text_size_small"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <EditText
            android:id="@+id/minute_list"
            android:textColor="@android:color/black"
            android:layout_width="@dimen/width_edit_text_small"
            android:layout_height="@dimen/width_edit_text_small"
            android:textSize="@dimen/text_size_small"
            android:inputType="number"
            android:maxLength="2"/>
    </RelativeLayout>


</LinearLayout><!-- From: file:/home/dmitry/AndroidStudioProjects/timer/app/src/main/res/layout-small/element_alarm_list.xml -->