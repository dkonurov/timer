<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/linear_width_large"
    android:layout_height="@dimen/linear_height_large"
    android:orientation="horizontal"
    android:background="@drawable/edit_text_background"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <EditText
            android:id="@+id/hour_list"
            android:textColor="@android:color/black"
            android:layout_width="@dimen/width_edit_text_normal"
            android:layout_height="@dimen/width_edit_text_normal"
            android:layout_marginLeft="@dimen/edit_text_left_padding_normal"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="@dimen/text_size_normal"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <EditText
            android:id="@+id/minute_list"
            android:textColor="@android:color/black"
            android:layout_width="@dimen/width_edit_text_normal"
            android:layout_height="@dimen/width_edit_text_normal"
            android:textSize="@dimen/text_size_large"
            android:inputType="number"
            android:maxLength="2"
            android:fontFamily=""/>
    </RelativeLayout>

</LinearLayout>