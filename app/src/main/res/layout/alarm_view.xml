<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alarm_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/top_left_image_params"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@drawable/top_left"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:background="@drawable/edit_text_background"
        android:gravity="center_vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:id="@+id/hour"
                android:layout_centerInParent="true"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:cursorVisible="false"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:inputType="number"
                android:maxLength="2"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <EditText
                android:id="@+id/minute"
                android:layout_centerInParent="true"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:cursorVisible="false"
                android:inputType="number"
                android:maxLength="2"/>
        </RelativeLayout>

    </LinearLayout>

    <ToggleButton
        android:id="@+id/music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:text=""
        android:textOff=""
        android:textOn=""
        android:layout_alignParentBottom="true"
        android:background="@drawable/thursday_selector"/>

    <ToggleButton
        android:id="@+id/vibration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_bottom_vibration"
        android:text=""
        android:textOff=""
        android:textOn=""
        android:layout_alignParentBottom="true"
        android:background="@drawable/monday_selector"/>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textOff=""
        android:textOn=""
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_start_stop_selector"/>

</RelativeLayout>